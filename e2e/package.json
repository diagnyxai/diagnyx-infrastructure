{
  "name": "@diagnyx/e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Diagnyx authentication system",
  "main": "index.js",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:setup": "playwright install",
    "docker:up": "docker-compose -f docker-compose.e2e.yml up --build -d",
    "docker:down": "docker-compose -f docker-compose.e2e.yml down -v",
    "docker:test": "docker-compose -f docker-compose.e2e.yml --profile e2e up --build --abort-on-container-exit",
    "docker:logs": "docker-compose -f docker-compose.e2e.yml logs",
    "wait-for-services": "./scripts/wait-for-services.sh"
  },
  "keywords": [
    "e2e",
    "playwright",
    "testing",
    "authentication",
    "cognito"
  ],
  "author": "Diagnyx Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1498.0",
    "dotenv": "^16.3.1"
  }
}
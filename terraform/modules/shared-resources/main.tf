# ECR Repositories for Docker Images (shared across environments)
resource "aws_ecr_repository" "user_service" {
  name                 = "diagnyx/user-service"
  image_tag_mutability = "MUTABLE"

  image_scanning_configuration {
    scan_on_push = true
  }

  tags = merge(var.common_tags, {
    Name = "diagnyx-user-service-ecr"
    Type = "ECR"
    Shared = "true"
  })
}

